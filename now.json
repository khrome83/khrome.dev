{
  "version": 2,
  "name": "khrome.dev",
  "alias": ["khrome.dev"],
  "regions": ["all"],
  "build": {
    "env": {
      "NOW_ENV": "production"
    }
  },
  "builds": [
    {
      "src": "admin/**",
      "use": "@now/static",
      "config": {
        "includeFiles": [".forestry/**"]
      }
    },
    {
      "src": "uploads/**",
      "use": "@now/static"
    },
    {
      "src": "./image-www/package.json",
      "use": "@now/static-build",
      "config": {
        "includeFiles": ["data/options.json", "data/screens.json"]
      }
    },
    {
      "src": "image/src/card.ts",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "36mb",
        "includeFiles": [
          "image/src/patterns/**",
          "image/src/illustrations/**",
          "image/src/styles/**",
          "image/src/themes/**",
          "data/**"
        ]
      }
    },
    { "src": "./www/package.json", "use": "@now/static-build" }
  ],
  "routes": [
    { "src": "/admin/(.*)", "dest": "/admin/$1" },
    { "src": "/uploads/(.*)", "dest": "/uploads/$1" },
    { "src": "/image", "dest": "/image-www/index.html" },
    {
      "src": "/image/(favicon.ico|style.css|robots.txt)",
      "dest": "/image-www/$1"
    },
    { "src": "/image/(.+)", "dest": "/image/src/card.ts" },
    {
      "src": "/(style|browser).([^.]+)?.?(css|js|css).?(map)?",
      "dest": "/image-www/$1.$2.$3"
    },
    { "src": "/(.*)", "dest": "/www/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "status": 404, "dest": "/www/404" }
  ]
}
